<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray5"
        android:orientation="vertical">

        <include layout="@layout/include_toolbar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="账号"
            android:textColor="@color/gray2"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.lqr.optionitemview.OptionItemView
                style="@style/OptionItem"
                android:background="@drawable/selector_option_item"
                app:left_text="Smile ID"
                app:left_text_color="@color/black0"
                app:left_text_margin_left="15dp"
                app:left_text_size="16sp"
                app:right_text="unknown"
                app:right_text_color="@color/gray2"
                app:right_text_margin_right="20dp"
                app:right_text_size="14sp"/>

            <View
                style="@style/Line1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <View
                style="@style/Line1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <com.lqr.optionitemview.OptionItemView
                style="@style/OptionItem"
                android:background="@drawable/selector_option_item"
                app:left_text="手机号"
                app:left_text_color="@color/black0"
                app:left_text_margin_left="15dp"
                app:left_text_size="16sp"
                app:right_text="未绑定"
                app:right_text_color="@color/gray2"
                app:right_text_margin_right="20dp"
                app:right_text_size="14sp"/>

            <View
                style="@style/Line1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="安全"
            android:textColor="@color/gray2"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                style="@style/Line1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <com.lqr.optionitemview.OptionItemView
                style="@style/OptionItem"
                android:id="@+id/change"
                android:background="@drawable/selector_option_item"
                app:left_text="修改密码"
                app:left_text_color="@color/black0"
                app:left_text_margin_left="15dp"
                app:left_text_size="16sp"/>

            <View
                style="@style/Line1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />


        </LinearLayout>

    </LinearLayout>
</ScrollView>